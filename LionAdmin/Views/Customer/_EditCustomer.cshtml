@model LionAdmin.Service.CustomersViewModel


@if (Model != null)
{
    <form id="formValidationEditCustomer">
        <input type="hidden" asp-for="Id" id="customerId" />

        <div class="row">
            <div class="col-sm-12">
                <div class="row">
                    <div class="col-sm-4">

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="FirstName" class="control-label"></label>
                            <input asp-for="FirstName" class="form-control" name="editFirstName" required id="editfirstName" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>

                    </div>
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label asp-for="LastName" class="control-label"></label>
                            <input asp-for="LastName" class="form-control" name="editLastName" required id="editlastName" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label asp-for="PhoneNumber" class="control-label"></label>
                            <input asp-for="PhoneNumber" class="form-control" name="editphoneNumber" required id="editphoneNumber" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                    </div>
                </div>

            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="row">
                    <div class="col-sm-4">
                        <label class="form-group" style="width:100%">
                            <label asp-for="Gender" class="control-label"></label>

                            <select asp-for="Gender" class="form-control" asp-items="Html.GetEnumSelectList<Gender>()" id="editgender"></select>

                        </label>

                    </div>
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label asp-for="EmailAddress" class="control-label"></label>
                            <input asp-for="EmailAddress" class="form-control" id="editemail" />
                            <span asp-validation-for="EmailAddress" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label asp-for="CompanyAddress" class="control-label"></label>
                            <input asp-for="CompanyAddress" class="form-control" name="editcompanyAddress" required id="editcompanyAddress" />
                            <span asp-validation-for="CompanyAddress" class="text-danger"></span>
                        </div>

                    </div>

                </div>

            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="row">
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label asp-for="HomeAddress" class="control-label"></label>
                            <input asp-for="HomeAddress" class="form-control" name="edithomeAddress" required id="edithomeAddress" />
                            <span asp-validation-for="HomeAddress" class="text-danger"></span>
                        </div>

                    </div>
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label asp-for="Description" class="control-label"></label>
                            <input asp-for="Description" class="form-control" name="editdescription" required id="editdescription" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                    </div>
                </div>


            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="form-group" style="float:right">
                    <input type="button" value="Create" onclick="EditSaveCustomer()" class="btn btn-primary" />
                </div>
            </div>
        </div>
    </form>
}
<script>
    $(document).ready(function () {
        $('#formValidationEditCustomer').validate({
            rules: {
                editFirstName: {
                    required: true
                },
                editLastName: {
                    required: true
                },
                editphoneNumber: {
                    required: true
                },
                editcompanyAddress: {
                    required: true
                },
                edithomeAddress: {
                    required: true
                },
                editdescription: {
                    required: true
                }
            }
        });

    });




</script>